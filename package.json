{
  "name": "project-manager",
  "version": "1.0.0",
  "description": "AI-native project management tool with file-based storage",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--no-deprecation' next dev --port 3004",
    "dev:clean": "rm -rf .next && NODE_OPTIONS='--no-deprecation' next dev --port 3004",
    "dev:reset": "rm -rf .next node_modules/.cache && NODE_OPTIONS='--no-deprecation' next dev --port 3004",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' next build",
    "start": "next start --port 3004",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next node_modules/.cache",
    "update-claude": "node scripts/update-claude-md.js",
    "setup-git-hook": "bash scripts/setup-git-hook.sh"
  },
  "keywords": [
    "project-management",
    "ai-native",
    "nextjs",
    "typescript"
  ],
  "author": "Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.308.0",
    "next": "^14.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.0",
    "@hookform/resolvers": "^3.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.0.4",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  }
}
